  ];

  const $ = (s,r=document)=>r.querySelector(s);
  const el=(t,a={},c=[])=>{const n=document.createElement(t);Object.entries(a).forEach(([k,v])=>{if(k==="style")Object.assign(n.style,v);else if(k.startsWith("on"))n.addEventListener(k.slice(2),v);else if(k==="class")n.className=v;else n.setAttribute(k,v)});c.forEach(x=>n.appendChild(typeof x==="string"?document.createTextNode(x):x));return n};
  const style=el("style",{},[`.nm-btn{position:fixed;right:16px;bottom:16px;z-index:9999;border-radius:9999px;padding:12px 16px;font-weight:800;border:none;cursor:pointer;box-shadow:0 10px 25px rgba(0,0,0,.15);background:${CONFIG.brand.primary};color:#fff}.nm-panel{position:fixed;right:16px;bottom:76px;width:min(420px,calc(100vw - 32px));height:min(70vh,640px);background:${CONFIG.brand.light};color:#0f172a;border-radius:16px;box-shadow:0 30px 60px rgba(0,0,0,.25);display:none;flex-direction:column;overflow:hidden;z-index:9999}.nm-h{background:${CONFIG.brand.dark};color:#fff;padding:14px 16px;display:flex;align-items:center;justify-content:space-between}.nm-t{font-size:14px;font-weight:700}.nm-s{font-size:12px;opacity:.8}.nm-x{background:transparent;border:1px solid rgba(255,255,255,.25);color:#fff;border-radius:8px;padding:6px 8px;cursor:pointer}.nm-b{flex:1;overflow-y:auto;padding:16px}.nm-f{padding:12px;display:grid;grid-template-columns:1fr auto;gap:8px;border-top:1px solid #e2e8f0;background:#fff}.nm-i{width:100%;padding:10px 12px;border-radius:12px;border:1px solid #cbd5e1}.nm-send{padding:10px 14px;border-radius:12px;border:none;background:${CONFIG.brand.primary};color:#fff;font-weight:800;cursor:pointer}.nm-msg{margin-bottom:12px;display:flex;gap:8px}.nm-msg--bot .nm-bub{background:#eef6ff;color:#0b1726}.nm-msg--user{justify-content:flex-end}.nm-msg--user .nm-bub{background:${CONFIG.brand.primary};color:#fff}.nm-ava{width:28px;height:28px;border-radius:9999px;background:${CONFIG.brand.primary};display:flex;align-items:center;justify-content:center;color:#fff;font-weight:800}.nm-bub{max-width:85%;padding:10px 12px;border-radius:12px;line-height:1.45;box-shadow:0 2px 8px rgba(0,0,0,.06)}.nm-cta{display:inline-flex;gap:8px;flex-wrap:wrap;margin-top:8px}.nm-cta button,.nm-cta a{border-radius:999px;padding:6px 10px;font-size:12px;border:1px solid #cbd5e1;background:#fff;color:#0b1726;text-decoration:none;cursor:pointer}.nm-lead{display:grid;gap:8px;margin-top:8px}.nm-lead input,.nm-lead textarea{width:100%;padding:8px 10px;border:1px solid #cbd5e1;border-radius:8px}.nm-badge{font-size:11px;opacity:.75}`]);
  document.head.appendChild(style);

  const btn=el("button",{class:"nm-btn",title:"Zapytaj o terapię / kurs"},["💬 Zapytaj nas"]);
  const panel=el("section",{class:"nm-panel",role:"dialog","aria-label":"Asystent czatu"});
  const header=el("div",{class:"nm-h"},[el("div",{},[el("div",{class:"nm-t"},[CONFIG.brand.name]),el("div",{class:"nm-s"},["Terapia • Kursy • Mentoring ",el("span",{class:"nm-badge"},[CONFIG.ai.PROXY_URL?`• ${CONFIG.ai.modelLabel}`:"• FAQ offline"])])]),el("button",{class:"nm-x",onclick:()=>panel.style.display="none"},["✕ Zamknij"])]);
  const body=el("div",{class:"nm-b"});
  const footer=el("div",{class:"nm-f"});
  const input=el("input",{class:"nm-i",placeholder:"Napisz pytanie… (np. Ile kosztuje mentoring?)",maxlength:"500"});
  const send=el("button",{class:"nm-send"},["Wyślij"]);
  footer.append(input,send); panel.append(header,body,footer); document.body.append(btn,panel);

  btn.addEventListener("click",()=>{panel.style.display=panel.style.display==="flex"?"none":"flex"; panel.style.display==="flex"&&input.focus()});

  const push=(role,text,opts={})=>{
    const row=el("div",{class:`nm-msg nm-msg--${role}`});
    if(role==="bot") row.append(el("div",{class:"nm-ava"},["N"]));
    const bub=el("div",{class:"nm-bub"},[text]); row.append(bub);
    if(opts.cta&&opts.cta.length){
      const wrap=el("div",{class:"nm-cta"});
      opts.cta.forEach(c=>{ if(c.href){ wrap.append(el("a",{href:c.href},[c.text])) } else if(c.action==="lead"){ wrap.append(el("button",{onclick:()=>lead()},[c.text])) }});
      bub.append(el("div",{},[wrap]));
    }
    body.append(row); body.scrollTop=body.scrollHeight;
  };

  const hello=()=>push("bot","Cześć! Tu asystent Centrum Neuroróżnorodności. Pomogę Ci: terapia/VR albo edukacja (kursy, certyfikat) i mentoring. Zadaj pytanie lub wybierz:",{cta:[{text:"Chcę terapię / sesję",action:"lead"},{text:"VR: stres / ból",href:CONFIG.links.vr},{text:"Zobacz ofertę",href:CONFIG.links.oferta}]});

  const lead=()=>{
    const box=el("div",{class:"nm-lead"});
    const name=el("input",{placeholder:"Imię i nazwisko"});
    const email=el("input",{placeholder:"Email"});
    const needs=el("textarea",{rows:"3",placeholder:"Krótko opisz potrzeby (np. koncentracja, sen, ADHD, kurs terapeuty, VR)"});
    const go=el("button",{class:"nm-send"},["Wyślij zgłoszenie"]);
    go.addEventListener("click",()=>{
      const payload={name:name.value.trim(),email:email.value.trim(),needs:needs.value.trim(),ts:new Date().toISOString()};
      if(!payload.email||!payload.name){alert("Podaj imię i email ✉️");return;}
      const bodyTxt=encodeURIComponent(`Imię i nazwisko: ${payload.name}\nEmail: ${payload.email}\nPotrzeby: ${payload.needs}\nCzas: ${payload.ts}`);
      window.location.href=`mailto:${CONFIG.lead.mailto}?subject=${encodeURIComponent(CONFIG.lead.subject)}&body=${bodyTxt}`;
      push("bot","Dziękujemy! Odezwiemy się na podany email możliwie szybko.");
    });
    box.append(name,email,needs,go);
    push("bot","Zostaw kontakt — wrócimy z propozycją terminu i planem.");
    body.append(box); body.scrollTop=body.scrollHeight;
  };

  const fromKB = (q) => {
    const item = KB.find(it => it.q.test(q));
    if (!item) return null;
    return { text: item.a, cta: item.cta || [] };
  };

  // AI call z guardami — ograniczamy tematykę i styl
  const askAI=async(q)=>{
    if(!CONFIG.ai.PROXY_URL) return null;
    // twarde gardło: nie odpowiadamy na diagnozę/leczenie
    const forbidden = /(diagnoz|lek(arz|arsk)|lecz(e|y)|recept|dawk|farmakolog|psychiatr|psychoterapi|MRI|EEG wyniki|tomograf|USG)/i;
    if (forbidden.test(q)) {
      return { text: "Nie udzielamy porad medycznych ani diagnostycznych. Chętnie zaproponujemy edukacyjny plan wsparcia i skierujemy do specjalisty." };
    }
    try{
      const r=await fetch(CONFIG.ai.PROXY_URL,{method:"POST",headers:{"Content-Type":"application/json"},body:JSON.stringify({messages:[{role:"system",content:[
        "Rola: Asystent Naukowego Centrum Neuroróżnorodności.",
        "Ton: krótko, jasno, ciepło, po polsku. Bez diagnozy/leczenia.",
        "Dostępne obszary: VR (ból/stres/sen/koncentracja), edukacja/mentoring/coaching, kursy i certyfikat NMA, neurofeedback (char. edukacyjny).",
        "Jeśli pojawia się cena/zapis — zaproponuj pozostawienie kontaktu (imię+e-mail).",
        "Jeśli pytanie wykracza w medycynę kliniczną — odmów i zaproponuj kontakt/eksperta."
      ].join(" ")},{role:"user",content:q}],max_output_tokens:CONFIG.ai.maxOutputTokens,temperature:0.4})});
      if(!r.ok) throw new Error("Bad response");
      const data=await r.json();
      if(data&&data.reply) return {text:data.reply};
      return null;
    }catch(e){console.warn("AI proxy error",e); return null;}
  };

  const sendQ=async()=>{
    const q=input.value.trim(); if(!q) return;
    input.value=""; push("user",q);
    let done=false;

    const kb = fromKB(q);
    if (kb) { push("bot", kb.text, { cta: kb.cta }); done=true; }

    if(!done && CONFIG.ai.PROXY_URL){
      push("bot","Piszę odpowiedź… (AI)");
      const ai=await askAI(q);
      if(ai&&ai.text){
        const wants=/(zapis|umów|termin|wycen|koszt|cena|kontakt)/i.test(q);
        push("bot",ai.text,wants?{cta:[{text:"Zostaw kontakt",action:"lead"}]}:{});
        done=true;
      }
    }

    if(!done){
      const it=FAQ.find(f=>f.intent.test(q));
      if(it){ push("bot",it.answer,{cta:it.cta}); done=true; }
    }

    if(!done){
      push("bot","Dobre pytanie! Dam znać zespołowi. W międzyczasie możesz zostawić email — wrócimy z odpowiedzią.",{cta:[{text:"Zostaw kontakt",action:"lead"}]});
    }
  };

  const start=()=>{ hello(); panel.style.display="flex"; };
  send.addEventListener("click",sendQ);
  input.addEventListener("keydown",e=>{ if(e.key==="Enter") sendQ(); });
  setTimeout(start, 600);
})();
</script>
<!-- /AI Agent -->

</body>
</html>
